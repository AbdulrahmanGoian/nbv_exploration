<?xml version="1.0" ?>
<launch>
    <arg name="isFullSized" default="false"/>
    
    <arg name="ns" default="iris"/>
    <arg name="mav_name" default="iris"/>
    
    <env name="GAZEBO_MODEL_PATH" value="$(find rotors_gazebo)/models"/>
    
    
    <!-- Start Gazebo and set up the world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
	<arg name="world_name" value="$(find rotors_gazebo)/worlds/etihad_aircraft_world.world" if="$(arg isFullSized)" /> <!-- full sized -->
	<arg name="world_name" value="$(find rotors_gazebo)/worlds/etihad_aircraft_world_half.world" unless="$(arg isFullSized)" /> <!-- half sized -->
	<arg name="debug" value="false" />
	<arg name="headless" value="false"/>
	<arg name="gui" value="true"/>
    </include>
    

    <!-- Spawn UAV -->
    <group ns="$(arg mav_name)">
	<include file="$(find rotors_gazebo)/launch/spawn_iris.launch">
	    <arg name="model" value="$(find rotors_description)/urdf/$(arg mav_name)_surface_sensors.gazebo" />
	    <arg name="enable_logging" value="false" />
	    <arg name="enable_ground_truth" value="true" />
	    <arg name="log_file" value="$(arg ns)"/>
	    
	    <!-- Full sized scenario spawn point -->
	    <arg name="Y" value="3.14" if="$(arg isFullSized)" /><!-- Yaw -->
	    <arg name="y" value="-30" if="$(arg isFullSized)" />
	    <arg name="x" value="6" if="$(arg isFullSized)" />
	    
	    <!-- Half sized scenario spawn point -->
	    <arg name="Y" value="3.14" unless="$(arg isFullSized)" /><!-- Yaw -->
	    <arg name="y" value="-15" unless="$(arg isFullSized)" />
	    <arg name="x" value="4" unless="$(arg isFullSized)" />
	</include>
    </group>
    
    
    <!-- Set up autopilot (?) -->
    <include file="$(find px4)/launch/iris.launch">
	<arg name="ns" value="$(arg ns)"/>
    </include>

    <include file="$(find px4)/launch/mavros_sitl.launch">
	    <arg name="ns" value="$(arg ns)"/>
    </include>


    <!-- Publish static transporms -->
    <node pkg="tf" type="static_transform_publisher" name="link1_broadcaster" args="0 0 0.0 -0.5 0.5 -0.5 0.5 /iris/xtion_sensor/ground_truth/iris/xtion_sensor/ground_truth/odometry_sensor_link /iris/xtion_sensor/camera_depth_optical_frame 500" />
    
    
    <!-- Start RVIZ -->
    <node pkg="rviz" name="rviz" type="rviz" args="-d $(find aircraft_inspection)/rviz/nbv.rviz" required="true" />
    
    
    <!-- Run nodes -->
    <!--<node pkg="aircraft_inspection" name="nbv_loop" type="nbv_loop" args="" required="true" />-->
</launch>
